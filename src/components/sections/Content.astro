      <SectionTitle>Content</SectionTitle>
    </div>

    <BentoGrid>
      <BentoItem
        type="image"
        orientation="vertical"
        src="/images/img-1.jpg"
        alt="Image 1"
      />
      <BentoItem
        type="image"
        orientation="horizontal"
        src="/images/img-2.jpg"
        alt="Image 2"
      />
      <BentoItem
        type="image"
        orientation="horizontal"
        src="/images/img-3.jpg"
        alt="Image 3"
      />
      <BentoItem
        type="video"
        orientation="horizontal"
        src="https://utfs.io/f/9b6797a7-4bb3-4673-8ba2-5ca4a3afe456-1zral.webm"
        alt="Video"
        fullScreen
      />
      <BentoItem
        type="image"
        orientation="vertical"
        src="/images/img-4.jpg"
        alt="Image 4"
      />
      <BentoItem
        type="image"
        orientation="vertical"
        src="/images/img-5.jpg"
        alt="Image 5"
      />
