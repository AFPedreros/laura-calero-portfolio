---
import { Icons } from "@/components/Icons";
import HeaderIcons from "@/components/HeaderIcons.astro";
---

<header
  class="fixed z-50 flex h-16 w-full items-center justify-between py-6 md:h-20"
  id="header-nav"
>
  <a class="ml-4 text-lg font-bold md:ml-8 lg:ml-12" href="#top">Laura Calero</a
  >
  <a
    class="mr-4 cursor-pointer rounded-full bg-transparent p-2 transition-colors duration-300 hover:bg-primary md:mr-8 lg:mr-12"
    href="#header-menu"><Icons.menu /></a
  >
  <nav
    id="header-menu"
    class="fixed inset-0 flex h-dvh w-full -translate-y-full flex-col items-start gap-y-6 bg-background/95 px-8 py-20 text-3xl text-foreground transition-transform duration-300 target:translate-y-0 md:gap-y-8 md:px-12 md:text-5xl"
  >
    <a
      href="#top"
      class="uppercase tracking-wide transition-colors duration-300 hover:text-primary"
      >Home</a
    >
    <a
      href="#experience"
      class="uppercase tracking-wide transition-colors duration-300 hover:text-primary"
      >Experience</a
    >
    <a
      href="#content"
      class="uppercase tracking-wide transition-colors duration-300 hover:text-primary"
      >Content</a
    >
    <a
      href="#skills"
      class="uppercase tracking-wide transition-colors duration-300 hover:text-primary"
      >Skill</a
    >
    <a
      href="#about-me"
      class="uppercase tracking-wide transition-colors duration-300 hover:text-primary"
      >About Me</a
    >
    <HeaderIcons />
    <a
      href="#header-nav"
      class="absolute right-4 top-3 rounded-full border-2 border-primary bg-primary p-2 text-foreground transition-colors duration-150 hover:bg-transparent hover:text-primary md:right-8 md:top-5 lg:right-12"
    >
      <Icons.close />
    </a>
  </nav>
</header>
